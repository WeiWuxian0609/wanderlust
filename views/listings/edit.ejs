<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit the listings</h3>
            <form action="/listings/<%= listing._id %>?_method=PATCH" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3 col-12">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" value="<%= listing.title %>" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-3 col-12">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="mb-3 col-12">
                    <label for="image" class="form-label">Original Lising Image:</label>
                    <img src="<%= originalUrl %>" alt="listingImage" id="image" class="form-control img-edit">
                </div>
                <div class="mb-3 col-12">
                    <label for="image" class="form-label">Image:</label>
                    <input type="file" name="listing[image]" class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                        <div class="valid-feedback">Looks good</div>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                        <div class="valid-feedback">Looks good</div>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                        <div class="valid-feedback">Looks good</div>
                    </div>
                </div>
                <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
            </form>
        </div>
    </div>
</body>

